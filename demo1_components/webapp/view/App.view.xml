<mvc:View controllerName="ComponentBasedExampleProject.controller.App"
	xmlns:mvc="sap.ui.core.mvc" 
	xmlns:core="sap.ui.core" displayBlock="true"
	xmlns="sap.m">
	<App>
		<Page>
			<customHeader>
				<Bar>
					<contentLeft>
						<HBox>
							<Button id="btnNavBack" icon="sap-icon://nav-back" press="onNavBack"/>
						</HBox>
					</contentLeft>
					<contentMiddle>
						<Title text="Component architecture example project"/>
					</contentMiddle>
					<contentRight>
						<HBox>
							<Button icon="sap-icon://settings" press="onOpenSettings"/>
							<Button icon="sap-icon://retail-store" press="onShopPress"/>
						</HBox>
					</contentRight>
				</Bar>
			</customHeader>
			<content>
				<NavContainer id="idAppControl" navigate="onNavigate" afterNavigate="onAfterNavigate"/>
			</content>
		</Page>
	</App>
</mvc:View>